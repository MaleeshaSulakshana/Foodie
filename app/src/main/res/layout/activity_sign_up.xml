<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/auth"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".SignUpActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/orange3"
        android:textSize="36dp"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:hint="Username"
        android:inputType="text"
        android:textColorHint="@color/gray1"
        android:backgroundTint="@color/orange3"
        android:fontFamily="@font/roboto_regular"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:hint="E-mail address"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/gray1"
        android:backgroundTint="@color/orange3"
        android:fontFamily="@font/roboto_regular"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:hint="Phone number"
        android:inputType="number"
        android:textColorHint="@color/gray1"
        android:backgroundTint="@color/orange3"
        android:fontFamily="@font/roboto_regular"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="@color/gray1"
        android:backgroundTint="@color/orange3"
        android:fontFamily="@font/roboto_regular"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColorHint="@color/gray1"
        android:backgroundTint="@color/orange3"
        android:fontFamily="@font/roboto_regular"/>

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="180dp"
        android:layout_height="42dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/orange_circle_button_background"
        android:text="Sign Up"
        android:textStyle="bold"
        android:fontFamily="@font/mplus_rounded1c_bold"
        app:backgroundTint="@null"/>

    <LinearLayout
        android:id="@+id/txtSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do you have an account? "
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/gray2"
            android:textSize="14dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textStyle="italic"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/orange3"
            android:textSize="14dp"/>

    </LinearLayout>

</LinearLayout>